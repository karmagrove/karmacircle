<h1> Your customers </h1>
<% @customers.each do |c| %>

<%= c.email %> <br />

<% end %>

<h1> Your charges </h1>
<div class="table">
<div class="row header">  
     <div class="col-md-3">
    <h2>Transaction Date </h2>
    </div>

	  <div class="col-md-2">
    <h2>Amount </h2>
    </div>
    <div class="col-md-1">
    <h2> Customer email </h2>
    </div>
    <div class="col-md-3" >
    <h2> Description </h2>
    </div>
    <div class="col-md-3">
    <h2> Charity Donation Status </h2>
    </div>
</div>
  <% @charges.each do |c| %>
  

  <div class="row">
    <div class="col-md-3">
    <%= Time.at(c.created).strftime("%Y-%m-%d") %> <br />
    </div>
    <div class="col-md-1">
    $<%= (c.amount / 100) %> <br />
    </div>
    <div class="col-md-2">
    <%= c.source.name %> <br />
    </div>
    <div class="col-md-3">
    <%= c.description %> <br />
    </div>
    <div class="col-md-3">
    <% if @d = DonationCharge.find_by_payment_reference(c.id) %> 
      $<%= @d.donation_amount/100.to_f %> 
      <% if @d.charity %> 
         <%= @d.charity.name %> 
      <% end %>
      <span class="donation-charge-status">
        (<%= @d.status %>) 
      </span>
    <% end %>  
    <br />
    </div>
  </div>
  <% end %>
</div> 
<div class="row">
  <div class="col-md-12">
  <h4>
  Unpaid Explanation
  </h4>

  <p>
  Expected to be paid on the 1st of the coming month
  </p>
  <p>
  If you wish to change which charity you are giving to before they are paid, please <a href="mailto:joshua@karmagrove.com?subject=change%20charity%20request">contact us 
  </a>
  </div>
</div>

