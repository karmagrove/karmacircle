<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Name</th>
      <th>Price</th>
      <th>Public</th>
      <th>Donation percent</th>
      <th>Image url</th>
      <th>User</th>
      <% if @is_owner %>
      <th colspan="3"></th>
      <% else %>
      <th>
      Show Product
      </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.description %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.public %></td>
        <td><%= product.donation_percent %></td>
        <td><%= product.image_url %></td>
        <td><%= product.user %></td>
       <% if @is_owner %>
        <td><%= link_to 'Show', user_product_path(:id => product['id'], :user_id=>current_user.id) %></td>
        <td><%= link_to 'Edit', edit_user_product_path(:user=>current_user.id, :id=> product["id"]) %> </td>
        <td><%= link_to 'Destroy', user_product_path(:id=> product["id"]), method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% else %>

          <td><%= link_to 'Show', user_product_path(:id => product['id'], :user_id=> params[:user_id]) %></td>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

