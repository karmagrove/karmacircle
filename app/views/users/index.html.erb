<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
  <h3>Create new user</h3>
  <form method="post" action="/users/invite">
  <input type="text" name="user[email]"></input>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token =%>
  <input type="hidden" name="user[user_id]"><%=current_user.id%></input>
  <button type="submit">
  Submit
  </button>
  </form>
  
  
  </div>
</div>