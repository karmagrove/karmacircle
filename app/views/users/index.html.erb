<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
  <h3>Create new user</h3>

  <%= form_for("user", url: "/users/invite" ) do |f| %>
  
  
  <!-- <form method="post" action="/users/invite"> -->
  email: <input type="text" name="user[email]"></input>
  password: <input type="text" name="user[password]"></input>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  
  <input type="hidden" class="hidden" style="display:none" name="user[user_id]" value='"'<%= current_user.id %>'"'>
  </input>

  <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
  <button type="submit">
  Submit
  </button>
  </form>
  <% end %>
  
  
  </div>
</div>