// home page
.plans{
  text-align: center;
}
.plan{
  background-color: #111575;
}
.plan.featured-plan{
  background-color: #CCAB00;
}
.plan h2{
  line-height: 100px;
  color: #fff;
}

.flow-dialog {
	padding-left: 70px;
}

#flow{
	padding-top:100px;
	margin:20px 0 40px 0
}

#flow div.three{
	padding-left: 40px;
}

@media (max-width: 555px) {
	#flow {
	visibility:hidden;
	display: none;
	}
	.flow-image{
	visibility:hidden;
	display: none;
	}

}

@media (min-width: 555px) {
	#flow {
	visibility: visible;
	}
	.flow-image{
	visibility: visible;
	}
}