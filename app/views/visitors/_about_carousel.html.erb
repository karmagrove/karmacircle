<div id="about-carousel" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
     <%=  link_to image_tag("photo1.jpg"), "/" %>
     <div class="carousel-caption">
      <p>Each batch of Karma coins is locally prepared with love and superfood </p>
    </div>
  </div>


  <div class="item">
    <%=  link_to image_tag("circle.png"), "/" %>
    <div class="carousel-caption">
      <p style="color:black"> <br /> <br /> <br /> Now anyone can use Circle to give as they receive </p>
    </div>
  </div>


  <div class="item">
    <%=  link_to image_tag("karmabar.jpg"), "/" %>
    <div class="carousel-caption">
      <p> The superfoods' color reveals the vibrant life nourishing nutrient profile </p>
    </div>
  </div>





</div>

<!-- Controls -->
<a class="carousel-control left" href="#about-carousel" data-slide="prev">&lsaquo;
</a>
<a class="carousel-control right" href="#about-carousel" data-slide="next">&rsaquo;</a>
</div>

<script>
$(document).ready(function(){

  $('.carousel').carousel({
    pause: "hover",
    interval: 10000,
    wrap: true
  });


  $('.carousel').swiperight(function() {
    $(".carousel").carousel('prev');
  });

  $('.carousel').swipeleft(function() {
    $(".carousel").carousel('next');
  });

});
</script>

