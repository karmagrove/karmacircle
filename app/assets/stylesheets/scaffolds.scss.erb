@import "compass/css3";

// variables
$primary: #009444;
$mb: 70px;

//commoners

.whitetxt{
  color: #fff;
}

.hpadding{
  padding: 50px 0;
  h1{
    margin-bottom: $mb;
  }
}

.member{
  background: #91C73D;
}

.middle{
  text-align: center;
  margin: 0 auto;
}

.percentage{
  background: $primary;
  padding: 10px;
  color: #fff;
  height: 45px;
  width: 45px;
  line-height: 45px;
  text-align: center;
  font-size: 21px;
  @include border-radius(100%);
}

.main-content{
  min-height: 650px;
}

.main-tier{
  margin-top: 100px;
}

.header-fix{
  margin-top: 60px;
}

.icon-home{
  display: block;
  margin: 0 auto;
  margin-bottom: 10px;
  background: rgba(255, 255, 255, 0.8);
  color: $primary;
  height: 95px;
  width: 95px;
  line-height: 95px;
  @include border-radius(100%);
}

.block{
  padding: 30px 0;
  &.hiw{
    background-color: $primary;
    background-image: url(gradient.png) no-repeat top center;
    padding: 30px;
    h1{
      color:white; 
      margin-bottom: $mb;
    }
    color: #fff;
  }
  &.main{
    background: url(<%=asset_path "header.jpg" %>) no-repeat fixed;
    -webkit-background-size: 100%;
    background-size: 100%;
    width: 100%;
    height: 450px;
  }
}

.asterisk{
 color: red;  
}

footer, .footer{
  background: #000;
  color: white;
  min-height: 70px;
}

.panel{
 &.newsletter {
   background: #f6f6f6;
   @include border-top-radius(10px);
   border-bottom:0;
   position: relative;
   top: 20px;
 }
 &#mc_embed_signup{
   background: lightcoral;
 }
}

.alert-box{
  &.warning{
    a{
      color: #dddddd;
    }
  }
}

.alert-box{
  margin-top: 20px;
}