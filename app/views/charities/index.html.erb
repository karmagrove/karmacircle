<p id="notice"><%= notice %></p>

<h1>Listing Charities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th>Email</th>
      <th>City</th>
      <th>State</th>
      <% if current_user %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @charities.each do |charity| %>
      <tr>
        <td><%= charity.name %></td>
        <td><%= charity.description %></td>
        <td><%= charity.url %></td>
        <td><%= charity.email %></td>
        <td><%= charity.city %></td>
        <td><%= charity.state %></td>
        <% if current_user %>
        <td><%= link_to 'Show', charity %></td>
        <td><%= link_to 'Edit', edit_charity_path(charity) %></td>
        <td><%= link_to 'Destroy', charity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

