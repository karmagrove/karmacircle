<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Name</th>
      <th>Price</th>
      <th>Public</th>
      <th>Donation percent</th>
       <th>Image</th>
      <% if @is_owner %>
      <th colspan="3"></th>
      <% else %>
      <% if params[:user_id] && current_user && current_user.id == params[:user_id].to_i %> <th>
      More
      </th>
      <% end %>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.description %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.public %></td>
        <td><%= product.donation_percent %></td>
        <% if product.image_url%> <td><%= image_url(product.image_url) %></td> <% else %> <td> </td><% end %>
       <% if current_user.id == product.user_id %>
        <td><%= link_to 'Show', user_product_path(:id => product['id'], :user_id=>current_user.id) %>
        <%= link_to 'Edit', edit_user_product_path(:user=>current_user.id, :id=> product["id"]) %>
        <%= link_to 'Destroy', user_product_path(:id=> product["id"]), method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% else %>

          <td><%= link_to 'Show', user_product_path(:id => product['id'], :user_id=> params[:user_id]) %></td>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

