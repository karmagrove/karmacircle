<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Ticket name</th>
      <th>Quantity available</th>
      <th>Price</th>
      <th>Description</th>
      <th>Sales start</th>
      <th>Sales end</th>
      <th>Ticket minimum</th>
      <th>Ticket maximum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to(ticket.event.name, ticket.event) %></td>
        <td><%= ticket.ticket_name %></td>
        <td><%= ticket.quantity_available %></td>
        <td><%= ticket.price %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.sales_start %></td>
        <td><%= ticket.sales_end %></td>
        <td><%= ticket.ticket_minimum %></td>
        <td><%= ticket.ticket_maximum %></td>
        <td><%= link_to 'Show', event_ticket_path(@event,ticket) %></td>
        <td><%= link_to 'Edit', edit_event_ticket_path(@event,ticket) %></td>
        <td><%= link_to 'Destroy', event_ticket_path(@event,ticket), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_event_ticket_path %>
