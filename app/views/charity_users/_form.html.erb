<h1> Available charities </h1>
<% if current_user.charity_users.length > 0 %>
	Currently you support: <%= current_user.charity_users.first.charity.name %>

  <%= form_for :update_charity_user, :id => current_user.charity_users.first.id do |f| %>
    <%= collection_select(:charity_user, :charity_id, @charities, :id, :name) %>
      <div class="actions">
        <%= f.submit, :value => "submit" %>
      </div>
  <% end %>
  
  

<% else %> 
  
  <%= form_for :charity_user do |f| %>
  
    <%= collection_select(:charity_user, :charity_id, @charities, :id, :name ) %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  	  

    
<% end %>  